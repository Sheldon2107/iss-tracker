import sqlite3

DB_NAME = 'iss_data.db'

def init_db():
    conn = sqlite3.connect(DB_NAME)
    c = conn.cursor()
    c.execute('''CREATE TABLE IF NOT EXISTS iss_telemetry
                 (id INTEGER PRIMARY KEY AUTOINCREMENT,
                  timestamp INTEGER,
                  latitude REAL,
                  longitude REAL,
                  altitude REAL,
                  velocity REAL,
                  visibility TEXT,
                  footprint REAL,
                  daynum REAL,
                  solar_lat REAL,
                  solar_lon REAL,
                  units TEXT,
                  created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP)''')
    conn.commit()
    conn.close()
    print(f"Database {DB_NAME} created with table iss_telemetry.")

if __name__ == "__main__":
    init_db()
